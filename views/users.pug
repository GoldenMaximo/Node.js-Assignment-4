extends layout/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/users.css")

block content
    main
        if userNames.length > 0
            .grid
                h1 Users
                each user in userNames
                    .card.user-item
                        header.card__header
                            h1.user__title #{user}
        else
            h1 No users yet, you can add some at the Home page